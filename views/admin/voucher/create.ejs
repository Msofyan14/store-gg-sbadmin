<%- include('../../partials/header.ejs') %>

<!-- Page Wrapper -->
<div id="wrapper">
  <!-- Sidebar -->
  <%- include('../../partials/sidebar.ejs') %>
  <!-- End of Sidebar -->

  <!-- Content Wrapper -->
  <div id="content-wrapper" class="d-flex flex-column">
    <!-- Main Content -->
    <div id="content">
      <!-- Topbar -->
      <%- include('../../partials/navbar.ejs') %>
      <!-- End of Topbar -->

      <!-- Begin Page Content -->
      <div class="container-fluid">
        <!-- Page Heading -->
        <section class="content-header">
          <div class="container-fluid">
            <div class="row mb-2">
              <div class="col-sm-6">
                <h1>Voucher</h1>
              </div>
              <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                  <li class="breadcrumb-item"><a href="/">Home</a></li>
                  <li class="breadcrumb-item">
                    <a href="/voucher">Voucher</a>
                  </li>
                  <li class="breadcrumb-item active">Add</li>
                </ol>
              </div>
            </div>
          </div>
        </section>
        <!-- End heading -->
        <!-- Main content -->

        <section class="content">
          <div class="container-fluid">
            <div class="row">
              <div class="col-12">
                <div class="card">
                  <div class="card-header">
                    <h3 class="card-title">
                      <a href="/voucher/create" class="btn btn-primary">
                        <i class="nav-icon far fa-plus-square"></i> Add
                      </a>
                    </h3>
                  </div>
                  <!-- /.card-header -->
                  <div class="card-body">
                    <div class="card card-primary">
                      <div class="card-header">
                        <h3 class="card-title">Form Add Voucher</h3>
                      </div>
                      <!-- /.card-header -->
                      <!-- form start -->
                      <form
                        action="/voucher/create"
                        method="POST"
                        enctype="multipart/form-data"
                      >
                        <div class="card-body">
                          <div class="form-group">
                            <label for="name">Game Name</label>
                            <input
                              type="text"
                              class="form-control"
                              name="name"
                              id="name"
                              placeholder="Enter Game Name"
                              required
                            />
                          </div>
                          <div class="form-group">
                            <label>Category</label>
                            <select
                              class="form-control"
                              style="width: 100%"
                              name="category"
                              required
                            >
                              <option value="" selected disabled hidden>
                                Choose Category
                              </option>
                              <% category.forEach(category => { %>
                              <option value="<%= category._id  %>">
                                <%= category.name %>
                              </option>
                              <% }) %>
                            </select>
                          </div>
                          <div class="form-group">
                            <label>Nominal</label>
                            <div class="">
                              <select
                                id="multiple"
                                class="form-control"
                                multiple
                                style="width: 100%"
                                name="nominals"
                                required
                              >
                                <% nominals.forEach(nominal => { %>
                                <option value="<%= nominal._id  %>">
                                  <%= nominal.coinName %> <%=
                                  nominal.coinQuantity %>
                                </option>
                                <% }) %>
                              </select>
                            </div>
                          </div>
                          <div class="form-group">
                            <label for="image">Image</label>
                            <input
                              type="file"
                              class="form-control"
                              name="image"
                              id="image"
                              placeholder="Input Image"
                              required
                            />
                            <br />
                            <img src="" id="perview" />
                          </div>
                        </div>
                        <!-- /.card-body -->

                        <div class="card-footer">
                          <button type="submit" class="btn btn-primary">
                            Submit
                          </button>
                        </div>
                      </form>
                    </div>
                  </div>
                  <!-- /.card-body -->
                </div>
                <!-- /.card -->

                <!-- /.card -->
              </div>
              <!-- /.col -->
            </div>
            <!-- /.row -->
          </div>
          <!-- /.container-fluid -->
        </section>
      </div>
      <!-- /.container-fluid -->
    </div>
    <!-- End of Main Content -->

    <!-- Footer -->
    <%- include('../../partials/footer.ejs') %>
    <!-- End of Footer -->
  </div>
  <!-- End of Content Wrapper -->
</div>
<!-- End of Page Wrapper -->

<!-- Bootstrap core JavaScript-->
<%- include('../../partials/js.ejs') %>

<script>
  function readURL(input) {
    if (input.files && input.files[0]) {
      const reader = new FileReader();

      reader.onload = function (e) {
        $("#perview").attr("src", e.target.result);
        $("#perview").attr("width", "20%");
        $("#perview").attr("height", "20%");
      };
      reader.readAsDataURL(input.files[0]);
    }
  }

  $("#image").change(function () {
    readURL(this);
  });

  $("#multiple").select2({
    placeholder: "  Select Nominal",
    allowClear: true,
  });
</script>
