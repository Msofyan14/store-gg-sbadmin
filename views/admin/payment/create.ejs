<%- include('../../partials/header.ejs') %>

<!-- Page Wrapper -->
<div id="wrapper">
  <!-- Sidebar -->
  <%- include('../../partials/sidebar.ejs') %>
  <!-- End of Sidebar -->

  <!-- Content Wrapper -->
  <div id="content-wrapper" class="d-flex flex-column">
    <!-- Main Content -->
    <div id="content">
      <!-- Topbar -->
      <%- include('../../partials/navbar.ejs') %>
      <!-- End of Topbar -->

      <!-- Begin Page Content -->
      <div class="container-fluid">
        <!-- Page Heading -->
        <section class="content-header">
          <div class="container-fluid">
            <div class="row mb-2">
              <div class="col-sm-6">
                <h1>Payment Method</h1>
              </div>
              <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                  <li class="breadcrumb-item"><a href="/">Home</a></li>
                  <li class="breadcrumb-item"><a href="/bank">Payment</a></li>
                  <li class="breadcrumb-item active">Add</li>
                </ol>
              </div>
            </div>
          </div>
        </section>
        <!-- End heading -->
        <!-- Main content -->
        <section class="content">
          <div class="container-fluid">
            <div class="row">
              <div class="col-12">
                <div class="card">
                  <div class="card-header">
                    <h3 class="card-title">
                      <a href="/payment/create" class="btn btn-primary">
                        <i class="nav-icon far fa-plus-square"></i> Add
                      </a>
                    </h3>
                  </div>
                  <!-- /.card-header -->
                  <div class="card-body">
                    <div class="card card-primary">
                      <div class="card-header">
                        <h3 class="card-title">Form Add Payment</h3>
                      </div>
                      <!-- /.card-header -->
                      <!-- form start -->
                      <form action="/payment/create" method="POST">
                        <div class="card-body">
                          <div class="form-group">
                            <label for="type">Type</label>
                            <input
                              type="text"
                              class="form-control"
                              name="type"
                              id="type"
                              placeholder="Add Type Payment"
                              required
                            />
                          </div>
                          <div class="form-group">
                            <label>Bank</label>
                            <div class="">
                              <select
                                class="form-control"
                                id="multiple"
                                multiple
                                style="width: 100%"
                                name="banks"
                                required
                              >
                                <% banks.forEach(bank => { %>
                                <option value="<%= bank._id  %>">
                                  <%= bank.name %> - <%= bank.nameBank %> - <%=
                                  bank.noRekening %>
                                </option>
                                <% }) %>
                              </select>
                            </div>
                          </div>
                        </div>
                        <!-- /.card-body -->

                        <div class="card-footer">
                          <button type="submit" class="btn btn-primary">
                            Submit
                          </button>
                        </div>
                      </form>
                    </div>
                  </div>
                  <!-- /.card-body -->
                </div>
                <!-- /.card -->

                <!-- /.card -->
              </div>
              <!-- /.col -->
            </div>
            <!-- /.row -->
          </div>
          <!-- /.container-fluid -->
        </section>
      </div>
      <!-- /.container-fluid -->
    </div>
    <!-- End of Main Content -->

    <!-- Footer -->
    <%- include('../../partials/footer.ejs') %>
    <!-- End of Footer -->
  </div>
  <!-- End of Content Wrapper -->
</div>
<!-- End of Page Wrapper -->

<!-- Bootstrap core JavaScript-->
<%- include('../../partials/js.ejs') %>

<script>
  $("#multiple").select2({
    placeholder: "  Choose Payment",
    allowClear: true,
  });
</script>
